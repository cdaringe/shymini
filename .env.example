# Server configuration
SHYMINI__HOST=0.0.0.0
SHYMINI__PORT=8080

# Database configuration (use one of the following)
# PostgreSQL (requires postgres feature)
# SHYMINI__DATABASE_URL=postgres://user:password@localhost/shymini

# SQLite (requires sqlite feature)
SHYMINI__DATABASE_PATH=./shymini.db

# GeoIP configuration (optional)
# Download from: https://www.maxmind.com/en/geolite2/signup
# SHYMINI__MAXMIND_CITY_DB=/path/to/GeoLite2-City.mmdb
# SHYMINI__MAXMIND_ASN_DB=/path/to/GeoLite2-ASN.mmdb

# Privacy settings
SHYMINI__BLOCK_ALL_IPS=false
SHYMINI__AGGRESSIVE_HASH_SALTING=false

# Script settings
SHYMINI__SCRIPT_HEARTBEAT_FREQUENCY_MS=5000

# Cache settings
SHYMINI__CACHE_MAX_ENTRIES=10000
SHYMINI__CACHE_TTL_SECS=3600
SHYMINI__SESSION_MEMORY_TIMEOUT_SECS=1800

# Logging
RUST_LOG=info
